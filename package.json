{
  "name": "task-nexus",
  "version": "1.1.6",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "dist": "npm run build && electron-builder",
    "release": "npm version patch && npm run dist",
    "release:minor": "npm version minor && npm run dist",
    "release:major": "npm version major && npm run dist"
  },
  "build": {
    "appId": "com.tasknexus.app",
    "productName": "Task Nexus",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "directories": {
      "output": "../../Task_NeXus_Release_v${version}"
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-v${version}-Portable.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png",
      "artifactName": "${productName}-v${version}.${ext}"
    }
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.5",
    "wait-on": "^7.2.0"
  }
}
